{
  "name": "pirate-flag",
  "author": "Adrian C. Miranda",
  "description": "A black flag bearing the figure of a skeleton",
  "version": "0.0.2",
  "main": "index.js",
  "homepage": "https://github.com/adriancmiranda/pirate-flag",
  "readmeFilename": "README.md",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriancmiranda/pirate-flag.git"
  },
  "bugs": {
    "url": "https://github.com/adriancmiranda/pirate-flag/issues"
  },
  "xo": {
    "overrides": [
      {
        "files": "index.js",
        "esnext": false
      },
      {
        "files": "lib/**/*.js",
        "esnext": false
      }
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    }
  },
  "scripts": {
    "upgrade": "ncu -a --loglevel verbose --packageFile package.json && npm i",
    "dev": "run-p watch:*",
    "test": "ava test/*.spec.js",
    "watch:test": "npm test -- --watch",
    "lint": "xo index.js tools.js templates.js lib/**/*.js",
    "travis:test": "npm test",
    "appveyor:test": "node --max_old_space_size=4096 node_modules\\ava-cli\\cli test/*.spec.js",
    "precommit": "run-s lint test",
    "commitmsg": "validate-commit-msg",
    "release": "npm run build && standard-version"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "ava-cli": "^0.0.1",
    "ava-spec": "^1.1.0",
    "conventional-commit-types": "^2.1.0",
    "cross-env": "^4.0.0",
    "husky": "^0.13.3",
    "npm-check-updates": "^2.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "standard-version": "^4.0.0",
    "validate-commit-msg": "^2.12.1",
    "xo": "^0.18.1"
  },
  "engines": {
    "node": ">=6.10.1"
  },
  "keywords": [
    "banner",
    "pirate-flag"
  ]
}
